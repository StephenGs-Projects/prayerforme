rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // Profile images - users can only upload/delete their own profile images
    match /profileImages/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
      allow create, update: if request.auth != null
                           && request.auth.uid == userId
                           && request.resource.size < 5 * 1024 * 1024
                           && request.resource.contentType.matches('image/.*');
    }

    // Ads and Audio - Admins only for write, all authenticated for read
    match /ads/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null; // Ideally check for admin role here
    }

    match /audio/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null; // Ideally check for admin role here
    }
  }
}
